# Django Configuration
DJANGO_SECRET_KEY=dev-secret-key-for-testing-only-change-in-production
DJANGO_ENVIRONMENT=development
DEBUG=True
ALLOWED_HOSTS=*

# Database (usando SQLite por defecto)
USE_POSTGRES=False

# CORS (permite frontend en localhost:5173)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# JWT Configuration
JWT_SECRET_KEY=dev-jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# Redis & Caching (opcional en development, usar locmem)
REDIS_URL=redis://127.0.0.1:6379/1

# Celery (opcional en development, usar eager mode)
CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0

# Security
QR_HMAC_SECRET=dev-qr-secret-change-in-production
QR_TTL_MINUTES=30

# Operational
MAX_AGENDAMIENTOS_PER_DAY=50
MAX_AGENDAMIENTOS_PER_WORKER=1

